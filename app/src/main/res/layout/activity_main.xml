<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        app:layout_boxedEdges="all">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/minchaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickMincha"
                android:text="@string/mincha" />

            <Button
                android:id="@+id/maarivButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickMaariv"
                android:text="@string/maariv" />

            <Button
                android:id="@+id/kriyatShemaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickKriyatShema"
                android:text="@string/kriyat_shema" />

            <Button
                android:id="@+id/birkatHamazonButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickBirkatHamazon"
                android:text="@string/birkat_hamazon" />
        </LinearLayout>
    </ScrollView>
</androidx.wear.widget.BoxInsetLayout>